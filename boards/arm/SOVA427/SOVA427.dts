/dts-v1/;
#include <st/f4/stm32f427vi.dtsi>
#include "stm32f427v(g-i)tx-pinctrl.dtsi"
/* #include "bb-header.dtsi" */

/ {
	model = "LMT Ltd SOVA427 Bird";
	compatible = "st,stm32f427vi";

	chosen {
		zephyr,console = &usart6;
		zephyr,shell-uart = &usart6;
		zephyr,uart-mcumgr = &usart6;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,ccm = &ccm0;
		zephyr,code-partition = &slot0_partition;
	};

	leds {
		compatible = "gpio-leds";
		glc_led: led_1 {
			gpios = <&gpiod 13 GPIO_ACTIVE_HIGH>;
			label = "GLC";/* Green Light Cathode */
		};
		yarc_led: led_2 {
			gpios = <&gpiod 14 GPIO_ACTIVE_HIGH>, <&gpiod 15 GPIO_ACTIVE_LOW>;
			label = "YARC";/* Yellow Annode Red Cathode */
		};
		ycra_led: led_3 {
			gpios = <&gpiod 15 GPIO_ACTIVE_HIGH>, <&gpiod 14 GPIO_ACTIVE_LOW>;
			label = "YCRA";/* Yellow Cathode Red Annode */
		};
	};


	gpio_keys {
		compatible = "gpio-keys";
		user_button: button {
			label = "User";
			gpios = <&gpioc 15 GPIO_ACTIVE_LOW>;
		};
	};

	aliases {
		led0 = &glc_led;
		led1 = &yarc_led;
		led2 = &ycra_led;
		sw0 = &user_button;
	};
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(25)>;
	status = "okay";
};

&pll {
	div-m = <15>;
	mul-n = <216>;
	div-p = <2>;
	div-q = <4>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(180)>; /* highest value to get a precise USB clock */
	ahb-prescaler = <1>;
	apb1-prescaler = <4>;
	apb2-prescaler = <2>;
};

&i2c1 {
	pinctrl-0 = <&i2c1_scl_pb8 &i2c1_sda_pb9>;
	pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&spi1 {
	pinctrl-0 = <&spi1_sck_pa5 &spi1_miso_pa6 &spi1_mosi_pa7>;
	pinctrl-names = "default";
	cs-gpios = <&gpiod 14 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
	status = "okay";
};


&spi2 {
	pinctrl-0 = <&spi2_sck_pb10 &spi2_miso_pb14 &spi2_mosi_pb15>;
	pinctrl-names = "default";
	cs-gpios = <&gpioe 5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
	status = "okay";
};
&spi3 {
	pinctrl-0 = <&spi3_sck_pc10 &spi3_miso_pc11 &spi3_mosi_pc12>;
	pinctrl-names = "default";
	cs-gpios = <&gpiod 14 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
	status = "okay";
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pb6 &usart1_rx_pb7>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
	modbus0: modbus {
		compatible = "zephyr,modbus-serial";
		label = "MODBUS0";
		de-gpios = <&gpioe 3 GPIO_ACTIVE_LOW>;
		status = "okay";
	};
};

&usart2 {
	pinctrl-0 = <&usart2_tx_pd5 &usart2_rx_pd6>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pd8 &usart3_rx_pd9>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&usart6 {
	pinctrl-0 = <&usart6_tx_pc6 &usart6_rx_pc7>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

zephyr_udc0: &usbotg_fs {
	pinctrl-0 = <&usb_otg_fs_dm_pa11 &usb_otg_fs_dp_pa12>;
	pinctrl-names = "default";
	status = "okay";
};

&rtc {
	status = "okay";
};

&iwdg {
	status = "okay";
};

&rng {
	status = "okay";
};

&dma2 {
	status = "okay";
};


&mac {
	status = "okay";
	pinctrl-0 = <&eth_mdc_pc1
	&eth_rxd0_pc4
	&eth_rxd1_pc5
	&eth_ref_clk_pa1
	&eth_mdio_pa2
	&eth_crs_dv_pa7
	&eth_tx_en_pb11
	&eth_txd0_pb12
	&eth_txd1_pb13
	>;
	pinctrl-names = "default";
};

&flash0 {
	/*
	 * For more information, see:
	 * https: //docs.zephyrproject.org/latest/reference/devicetree/index.html#fixed-flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* 64KB for bootloader */
		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x00010000>;
			read-only;
		};

		/* storage: 64KB for settings */
		storage_partition: partition@10000 {
			label = "storage";
			reg = <0x00010000 0x00010000>;
		};

		/* application image slot: 256KB */
		slot0_partition: partition@20000 {
			label = "image-0";
			reg = <0x00020000 0x00040000>;
		};

		/* backup slot: 256KB */
		slot1_partition: partition@60000 {
			label = "image-1";
			reg = <0x00060000 0x00040000>;
		};

		/* swap slot: 128KB */
		scratch_partition: partition@a0000 {
			label = "image-scratch";
			reg = <0x000a0000 0x00020000>;
		};

	};
};
